section.pagination 
    if hasPreviousPage
        a(href=`/?page=${currentPage - 1}`) #{previousPage}

    a.active(href=`/?page=${currentPage}`) #{currentPage}

    if hasNextPage
        a(href=`/?page=${currentPage + 1}`) #{nextPage}

    if lastPage !== currentPage && nextPage !== lastPage
        a(href=`/?page=${lastPage}`) #{lastPage}